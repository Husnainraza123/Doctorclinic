@model IEnumerable<DoctorApp.Models.Doctor>

@{
    ViewBag.Title = "DoctorProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-sm-7 col-6">
            <h4 class="page-title">My Profile</h4>
        </div>

        <div class="col-sm-5 col-6 text-right m-b-30">
            <asp:HiddenField ID="HDNDoctorID" ClientIDMode="Static" runat="server" />
            <a href="javascript:void(0);" id="editProfileBtn" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i>Edit Profile</a>
        </div>
    </div>
    <div class="card-box profile-header">
        <div class="row">
            <div class="col-md-12">
                <div class="profile-view">

                    @foreach (var doctor in Model)
                    {
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a class="avatar" href="#">
                                    <img id="lblImg" src="@doctor.Image" alt="" runat="server" clientidmode="Static" />
                                </a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h4 class="user-name m-t-0 mb-0">@doctor.FirstName @doctor.LastName</h4>
                                        <small class="text-muted">Gynecologist</small>
                                        <div class="staff-id">Doctor ID : @doctor.DoctorID</div>
                                        <div class="staff-msg"><a href="#" class="btn btn-primary">Send Message</a></div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <span class="title">Phone:</span>
                                            <span class="text"><a href="tel:@doctor.Phone">@doctor.Phone</a></span>
                                        </li>
                                        <li>
                                            <span class="title">Email:</span>
                                            <span class="text"><a href="mailto:@doctor.Email">@doctor.Email</a></span>
                                        </li>
                                        <li>
                                            <span class="title">Birthday:</span>
                                            <span class="text">@doctor.DOB.ToString("d MMMM")</span>
                                        </li>
                                        <li>
                                            <span class="title">Address:</span>
                                            <span class="text">@doctor.Address</span>
                                        </li>
                                        <li>
                                            <span class="title">Gender:</span>
                                            <span class="text">@doctor.Gender</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>}

                </div>
            </div>
        </div>
    </div>
    <div class="profile-tabs">
        <ul class="nav nav-tabs nav-tabs-bottom">
            <li class="nav-item"><a class="nav-link active" href="#about-cont" data-toggle="tab">About</a></li>
            <li class="nav-item"><a class="nav-link" href="#bottom-tab2" data-toggle="tab">Profile</a></li>
            <li class="nav-item"><a class="nav-link" href="#bottom-tab3" data-toggle="tab">Messages</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane show active" id="about-cont">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-box">
                            <h3 class="card-title">Education Informations</h3>
                            <div class="experience-box">
                                <ul class="experience-list">
                                    <asp:Repeater ID="ProfileRepeater" runat="server" DataSourceID="sdsProfile">
                                        <ItemTemplate>
                                            <li>
                                                <div class="experience-user">
                                                    <div class="before-circle"></div>
                                                </div>
                                                <div class="experience-content">
                                                    <div class="timeline-content">
                                                        <a href="#" id="lblFirst" runat="server" clientidmode="Static" class="name"></a>
                                                        <div id="lblDeg" runat="server" clientidmode="Static"></div>
                                                        <span class="time" id="lblYear" runat="server" clientidmode="Static"></span>
                                                    </div>
                                                </div>

                                                <div class="experience-content">
                                                    <div class="timeline-content">
                                                        <a href="#" id="lblS" runat="server" clientidmode="Static" class="name"></a>
                                                        <div id="lblDegr" runat="server" clientidmode="Static"></div>
                                                        <span class="time" id="lblYears" runat="server" clientidmode="Static"></span>
                                                    </div>
                                                </div>

                                            </li>
                                        </ItemTemplate>
                                    </asp:Repeater>


                                </ul>
                            </div>
                        </div>

                        <div class="card-box mb-0">
                            <h3 class="card-title">Experience</h3>
                            <div class="experience-box">
                                <ul class="experience-list">
                                    <asp:Repeater ID="ExpRepeater" runat="server" DataSourceID="sdsExp">
                                        <ItemTemplate>
                                            <li>
                                                <div class="experience-user">
                                                    <div class="before-circle"></div>
                                                </div>
                                                <div class="experience-content">
                                                    <div class="timeline-content">
                                                        <a href="#" id="lblFirstExp" runat="server" clientidmode="Static" class="name"></a>
                                                        <div id="lblPos" runat="server" clientidmode="Static"></div>
                                                        <span class="time" id="lblYears" runat="server" clientidmode="Static"></span>
                                                        <a href="#" id="lblFExp" runat="server" clientidmode="Static" class="name"></a>
                                                        <span class="time"></span>
                                                    </div>
                                                </div>
                                            </li>
                                        </ItemTemplate>
                                    </asp:Repeater>

                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="tab-pane" id="bottom-tab2">
                Tab content 2

            </div>
            <div class="tab-pane" id="bottom-tab3">
                Tab content 3

            </div>
        </div>
    </div>
</div>
