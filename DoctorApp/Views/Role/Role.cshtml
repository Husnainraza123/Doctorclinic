@model IEnumerable<DoctorApp.Models.Role>

@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    tr {
        font-weight: bold !important;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Role</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a href="../Role/AddRole" class="btn btn btn-primary btn-rounded float-right" style=" width: 124px; height: 32px; padding-top: 7px; font-size: 12px;">
                <i class="fa fa-plus"></i>Add Role
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Role Name</th>
                            <th>Status</th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody id="header" style="font-weight:bold;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoleID</td>
                                <td>@item.RoleName</td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <span class="custom-badge status-green">Active</span>

                                    }
                                    else
                                    {
                                        <span class="custom-badge status-red">Inactive</span>

                                    }

                                </td>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" onclick="EditRole(@item.RoleID)"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="dropdown-item" onclick="Delete(@item.RoleID)"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script>
    function EditRole(RoleID) {

        window.location.href = '/Role/EditRole?Id=' + RoleID;
        return;
    }

    $('Edit').click(function () {
        debugger;
        var RoleID = $(this).data('id');

        $('#exampleModalLabel').text("Edit Role");

        $.ajax({
            url: "/Role/EditRole",
            dataType: "json",
            type: "POST",
            data: { id: RoleID },
            success: function (response) {
                debugger;
                if (response) {
                    console.log(response);
                    $('#RoleName').val(response.RoleName);
                    $('#Status').val(response.Status);
                }

                else {
                    notifyDanger("Role data not found");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", xhr.responseText);
                notifyDanger("Error occurred while fetching teacher data");
            }
        });
    });

    function Delete(id) {
        debugger;
        console.log("Deleting RoleID with ID:", id);

        $.ajax({
            url: "/Role/DeleteRole",
            type: "POST",
            dataType: "json",
            contentType: "application/json", // Set the contentType to "application/json" for sending JSON data
            data: JSON.stringify({ id: id }), // Send data as a JSON string
            success: function (response) {
                if (response && response.data === 1) {
                    notifySuccess("Role deleted successfully");
                    $('#exampleModal').find('.close').click();
                    Bind(); // Refresh the data
                } else {
                    notifyDanger("Failed to delete Role");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", xhr.responseText);
                notifyDanger("An error occurred while deleting the doctor");
            }
        });
    }


</script>