@model IEnumerable<DoctorApp.Models.AttendanceViewModel>
@{
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Attendance</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a href="../Attendance/AddAttendance" class="btn btn btn-primary btn-rounded float-right" style=" width: 124px; height: 32px; padding-top: 7px; font-size: 12px;">
                <i class="fa fa-plus"></i>Add Attendance
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0" id="mytable">
                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody id="header" style="font-weight:bold;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmployeeName</td>
                                <td>@item.DOB.ToShortDateString()</td>
                                <td>
                                    @if (item.Status == "Present")
                                    {
                                        <span class="custom-badge status-green">Present</span> }
                                    else if (item.Status == "Absent")
                                    {
                                        <span class="custom-badge status-red">Absent</span>}
                                </td>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" onclick="EditAttendance(@item.AttendanceID)"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="dropdown-item" onclick="Delete(@item.AttendanceID)"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    function EditAttendance(AttendanceID) {

        window.location.href = '/Attendance/EditAttendance?Id=' + AttendanceID;
        return;
    }

    $('Edit').click(function () {
        debugger;
        var AttendanceID = $(this).data('id');

        $('#exampleModalLabel').text("Edit Leave");

        $.ajax({
            url: "/Attendance/EditAttendance",
            dataType: "json",
            type: "POST",
            data: { id: AttendanceID },
            success: function (response) {
                debugger;
                if (response) {
                    console.log(response);
                    $('#EmployeeID').val(response.EmployeeID);
                    $('#DOB').val(response.DOB);
                    $('#Status').val(response.Status);
                }

                else {
                    notifyDanger("Attendance data not found");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", xhr.responseText);
                notifyDanger("Error occurred while fetching Attendance data");
            }
        });
    });

    function Delete(id) {
        debugger;
        console.log("Deleting AttendanceID with ID:", id);

        $.ajax({
            url: "/Attendance/DeleteAttendance",
            type: "POST",
            dataType: "json",
            contentType: "application/json", // Set the contentType to "application/json" for sending JSON data
            data: JSON.stringify({ id: id }), // Send data as a JSON string
            success: function (response) {
                if (response && response.data === 1) {
                    notifySuccess("Attendance deleted successfully");
                    $('#exampleModal').find('.close').click();
                    Bind(); // Refresh the data
                } else {
                    notifyDanger("Failed to delete Attendance");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", xhr.responseText);
                notifyDanger("An error occurred while deleting the doctor");
            }
        });
    }

</script>