@model IEnumerable<DoctorApp.Models.AttendanceViewModel>
@{ 
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Attendance</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a href="../Attendance/AddAttendance" class="btn btn btn-primary btn-rounded float-right" style=" width: 124px; height: 32px; padding-top: 7px; font-size: 12px;">
                <i class="fa fa-plus"></i>Add Attendance
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0" id="mytable">
                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody id="header" style="font-weight:bold;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmployeeName</td>
                                <td>@item.DOB</td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <span class="custom-badge status-green">Active</span>

                                    }
                                    else
                                    {
                                        <span class="custom-badge status-red">Inactive</span>

                                    }

                                </td>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" onclick="EditRole"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="dropdown-item" onclick="Delete"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
