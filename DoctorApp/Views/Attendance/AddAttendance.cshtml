@model DoctorApp.Models.Attendance

@{
    ViewBag.Title = "AddAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">Add Attendance </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Employee Name</label>
                            <select name="ddlEmp" id="ddlEmp" class="form-control">
                                <option value="">Select Employee Name</option>
                                @if (ViewBag.employeenames != null)
                                {
                                    foreach (var sn in ViewBag.employeenames)
                                    {
                                        <option value="@sn.EmployeeID">@sn.FirstName @sn.LastName</option>
                                    }
                                }
                            </select>                           
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date</label>
                            <div>
                                <input type="date" class="form-control" id="datepicker" runat="server" clientidmode="Static">
                            </div>
                        </div>
                    </div>


                </div>
                              
                <div class="form-group">
                    <label class="display-block">Attendance  Status</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="product_active" value="True" checked>
                        <label class="form-check-label" for="product_active">
                            Present
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="product_inactive" value="False">
                        <label class="form-check-label" for="product_inactive">
                            Absent
                        </label>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button type="button" class="btn btn-primary submit-btn" onclick="Add()" style=" padding-top: 7px; font-size: 12px;">Save Appointment</button>
                </div>
            </div>
        </div>
    </div>
</div>